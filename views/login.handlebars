<div id="Login" class="row justify-space-between-md">
  <div class="login-card">
    <h2 class="page-title">LOG IN</h2>
    <form class="form login-form">
      <div class="form-group">
        <input class="form-input" type="text" placeholder="EMAIL" id="email-login" />
      </div>
      <div class="form-group">
        <input class="form-input" type="password" placeholder="PASSWORD" id="password-login" />
      </div>
      <div id="btn" class="form-group">
        <button class="btn btn-primary" type="submit">LOG IN</button>
      </div>
    </form>
  </div>
  <div class="login-card">
    <h2 class="page-title">SIGN UP</h2>
    <form class="form signup-form">
      <div class="form-group">
        <input class="form-input" type="text" placeholder="USERNAME" id="username-signup" />
      </div>
      <div class="form-group">
        <input class="form-input" type="text" placeholder="EMAIL" id="email-signup" />
      </div>
      <div class="form-group">
        <input class="form-input" type="password" placeholder="PASSWORD" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">SIGN UP</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
